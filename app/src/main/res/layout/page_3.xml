<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/premamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Total Installment: \nPremium"
                android:textColor="@color/lighttext"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/payterm"
                app:layout_constraintEnd_toStartOf="@+id/totpremset"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/payterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Paying Term:"
                android:textColor="@color/lighttext"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/asssum"
                app:layout_constraintStart_toStartOf="@+id/premamt"
                app:layout_constraintTop_toBottomOf="@+id/premamt" />

            <TextView
                android:id="@+id/asssum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Assured Sum:"
                android:textColor="@color/lighttext"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/payterm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Address:"
                android:textColor="@color/lighttext"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/addset"
                app:layout_constraintStart_toStartOf="@+id/asssum"
                app:layout_constraintTop_toBottomOf="@+id/asssum" />

            <EditText
                android:id="@+id/totpremset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ems="7"
                android:hint="Total Premium"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toBottomOf="@+id/premamt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/premamt"
                app:layout_constraintTop_toTopOf="@+id/premamt" />

            <EditText
                android:id="@+id/paytermset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="9"
                android:hint="Enter Paying Term Month"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toBottomOf="@+id/payterm"
                app:layout_constraintStart_toEndOf="@+id/payterm"
                app:layout_constraintTop_toTopOf="@+id/payterm" />

            <EditText
                android:id="@+id/asssumset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ems="9"
                android:hint="Enter Assuresd sum"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toBottomOf="@+id/asssum"
                app:layout_constraintStart_toEndOf="@+id/asssum"
                app:layout_constraintTop_toTopOf="@+id/asssum" />

            <EditText
                android:id="@+id/addset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:hint="Enter Address"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/address"
                app:layout_constraintTop_toBottomOf="@+id/address" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>